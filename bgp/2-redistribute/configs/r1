vrf definition green
 rd 65000:1
 route-target export 65000:1
 route-target import 65000:1
 !
 address-family ipv4
  import ipv4 unicast map LEAK_TO_GREEN
  export ipv4 unicast map LEAK_TO_GLOBAL
 exit-address-family
!
!
interface GigabitEthernet4
 description dc2->r2
 vrf forwarding green
 ip address 10.10.0.0 255.255.255.254
 negotiation auto
 no mop enabled
 no mop sysid

router bgp 65534
 bgp log-neighbor-changes
 !
 address-family ipv4
  redistribute ospf 1 match internal external 1 external 2 route-map OSPF_TO_BGP
 exit-address-family
 !
 address-family ipv4 vrf azure
  network 10.10.0.0 mask 255.255.255.254
  neighbor 10.10.0.1 remote-as 64666
  neighbor 10.10.0.1 activate
 exit-address-family
router ospf 1
 redistribute connected
 redistribute bgp 65534 route-map BGP_TO_OSPF
  redistribute ospf 1 match internal external 1 external 2 route-map OSPF_TO_BGP
!
ip community-list standard CL_OSPF_SOURCE permit 4294836324
ip prefix-list PFX_TO_AZURE seq 5 permit 10.5.0.0/16
ip prefix-list PFX_TO_AZURE seq 6 permit 10.10.0.0/24 le 32
ip prefix-list PFX_TO_AZURE seq 7 permit 172.16.0.0/24 le 32
ip prefix-list PFX_TO_AZURE seq 10 permit 0.0.0.0/0
ip prefix-list PFX_TO_GLOBAL seq 5 permit 10.15.60.0/22
ip prefix-list PFX_TO_GLOBAL seq 6 permit 192.168.15.0/24
ip prefix-list PFX_TO_GLOBAL seq 7 permit 172.16.0.0/24 le 32

route-map LEAK_TO_GLOBAL permit 10
 match ip address prefix-list PFX_TO_GLOBAL
route-map LEAK_TO_AZURE permit 10
 match ip address prefix-list PFX_TO_AZURE
route-map BGP_TO_OSPF deny 10
 match community CL_FROM_OSPF
route-map BGP_TO_OSPF permit 20
 set tag 65534
route-map OSPF_TO_BGP permit 10
 set community 4294836324
