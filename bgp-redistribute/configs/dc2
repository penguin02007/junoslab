set policy-options policy-statement export-to-bgp term 1 from protocol bgp
set policy-options policy-statement export-to-bgp term 1 from protocol static
set policy-options policy-statement export-to-bgp term 1 then accept
set policy-options policy-statement static-to-bgp term 1 from protocol static
set policy-options policy-statement static-to-bgp term 1 from route-filter 192.168.15.0/24 exact
set policy-options policy-statement static-to-bgp term 1 then accept
set policy-options policy-statement vrf-green-rt-export term 1 then community add tg_65000_1
set policy-options policy-statement vrf-green-rt-export term 1 then accept
set policy-options policy-statement vrf-green-rt-import term 1 from community tg_65000_1
set policy-options policy-statement vrf-green-rt-import term 1 then accept
set policy-options policy-statement vrf-green-rt-import term default then reject
set policy-options community tg_65000_1 members target:65000:1
set routing-instances green instance-type vrf
set routing-instances green routing-options static route 192.168.15.0/24 discard
set routing-instances green routing-options auto-export
set routing-instances green protocols bgp group ebgp type external
set routing-instances green protocols bgp group ebgp export static-to-bgp
set routing-instances green protocols bgp group ebgp export export-to-bgp
set routing-instances green protocols bgp group ebgp neighbor 10.10.0.0 peer-as 65534
set routing-instances green protocols bgp group ebgp neighbor 10.10.0.2 peer-as 65534
set routing-instances green interface ge-0/0/4.0
set routing-instances green interface ge-0/0/5.0
set routing-instances green route-distinguisher 65000:1
set routing-instances green vrf-import vrf-green-rt-import
set routing-instances green vrf-export vrf-green-rt-export
